{
  "color_enabled": true,
  "database": {
    "backend": "local",
    "url": "./shark-tasks.db"
  },
  "default_agent": null,
  "default_epic": null,
  "json_output": false,
  "interactive_mode": false,
  "last_sync_time": "2026-01-01T13:41:04-06:00",
  "patterns": {
    "epic": {
      "file": [
        "^epic\\.md$"
      ],
      "folder": [
        "^E(?P<number>\\d{2})-(?P<slug>[a-z0-9-]+)$",
        "^(?P<epic_id>tech-debt|bugs|change-cards)$"
      ],
      "generation": {
        "format": "E{number:02d}-{slug}"
      }
    },
    "feature": {
      "file": [
        "^prd\\.md$",
        "^PRD_F(?P<number>\\d{2})-(?P<slug>.+)\\.md$",
        "^(?P<slug>[a-z0-9-]+)\\.md$"
      ],
      "folder": [
        "^E(?P<epic_num>\\d{2})-F(?P<number>\\d{2})-(?P<slug>[a-z0-9-]+)$"
      ],
      "generation": {
        "format": "E{epic:02d}-F{number:02d}-{slug}"
      }
    },
    "task": {
      "file": [
        "^T-E(?P<epic_num>\\d{2})-F(?P<feature_num>\\d{2})-(?P<number>\\d{3}).*\\.md$",
        "^(?P<number>\\d{3})-(?P<slug>.+)\\.md$",
        "^(?P<slug>.+)\\.prp\\.md$"
      ],
      "folder": [],
      "generation": {
        "format": "T-E{epic:02d}-F{feature:02d}-{number:03d}.md"
      }
    }
  },
  "special_statuses": {
    "_complete_": [
      "completed",
      "cancelled"
    ],
    "_start_": [
      "draft",
      "ready_for_development"
    ]
  },
  "status_flow": {
    "blocked": [
